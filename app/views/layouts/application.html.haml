!!!
%html
  %head
    %title TodoManager
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body{"ng-app" => "todoApp", "ng-controller" => "MainCtrl"}
    .loading-spiner-holder{"data-loading" => ""}
      .loading-spiner
        %img{:src => "http://ipic.su/img/img7/fs/712.1430834220.gif"}/
    %toast
    %header
      .content-header
        %h2
          %b SIMPLE TODO LISTS
        %h4 FROM RUBY GARAGE
      %div{"ng-controller" => "SessionsCtrl", "class" => "sign-out", "ng-show" => "user"}
        %button{"ng-click" => "logout()", "class" => "btn btn-primary"} Sign out
    .container{"ng-show" => "showContent"}
      %div{"ng-view" => ""}
    %footer
      %p &copy; Ruby Garage